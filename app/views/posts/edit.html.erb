<div class="col-md-8">

  <form action="/posts/update/<%= @post.id %>" method="post">

    <div class="mb-3">
      <label for="title" class="form-label">Заголовок</label>
      <input type="text" class="form-control" name="post[title]" value="<%= @post.title %>">
    </div>


    <div class="mb-3">
      <select class="form-select" name="post[topic_id]">
        <% @topics.each do |topic|%>
          <option 
          value="<%= topic.id %>" 
          <% if topic.id == @post.topic_id %>
           selected="selected" 
          <%end%> >
          <%= topic.title %></option>
        <% end %>
      </select>
    </div>

    <div class="mb-3">
      <label for="body" class="form-label">Текст:</label>
      <textarea class="form-control" name="post[body]" rows="10"><%= @post.body %></textarea>
    </div>
    
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <button type="submit" class="btn btn-primary">Сохранить</button>
  </form>

</div>
